<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20260108-02-create-buildings" author="bap20">
        <createTable tableName="buildings">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="post_code" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="city" type="VARCHAR(255)"/>
            <column name="address" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="20260110-01-add-building-details" author="bap20">
        <addColumn tableName="buildings">
            <column name="contact_person" type="VARCHAR(255)"/>
            <column name="contact_phone" type="VARCHAR(255)"/>
            <column name="building_type" type="VARCHAR(50)"/>
            <column name="active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="last_maintenance_date" type="DATE"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>