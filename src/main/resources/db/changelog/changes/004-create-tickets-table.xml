<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">


    <changeSet id="20260108-04-create-tickets" author="bap20">
        <createTable tableName="tickets">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="reporter_email" type="VARCHAR(255)"/>
            <column name="description" type="TEXT"/>
            <column name="priority" type="VARCHAR(20)"/>
            <column name="status" type="VARCHAR(20)"/>
            <column name="created_at" type="TIMESTAMP"/>
            <column name="started_at" type="TIMESTAMP"/>
            <column name="finished_at" type="TIMESTAMP"/>
            <column name="building_id" type="BIGINT"/>
            <column name="mechanic_id" type="BIGINT"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="tickets" baseColumnNames="building_id"
                                 constraintName="fk_ticket_building"
                                 referencedTableName="buildings" referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="tickets" baseColumnNames="mechanic_id"
                                 constraintName="fk_ticket_mechanic"
                                 referencedTableName="mechanics" referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>